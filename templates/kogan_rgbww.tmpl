# vim: set ft=yaml:
---

# Pin configuration for a Kogan RGBWW bulb
sm16716:
  data_pin: GPIO14
  clock_pin: GPIO4
  num_channels: 3
  num_chips: 1

output:
  - platform: sm16716
    id: output_red
    channel: 2
    power_supply: rgb_power
  - platform: sm16716
    id: output_green
    channel: 1
    power_supply: rgb_power
  - platform: sm16716
    id: output_blue
    channel: 0
    power_supply: rgb_power
  - platform: esp8266_pwm
    id: output_white
    pin: GPIO13

power_supply:
  - id: rgb_power
    pin: GPIO5

light:
  - platform: rgbw
    name: ${device_name}
    red: output_red
    green: output_green
    blue: output_blue
    white: output_white
    restore_mode: ALWAYS_ON
