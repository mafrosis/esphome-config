---
substitutions:
  device_id: {{ device_id }}
  device_name: {{ device_name }}
  static_ip: {{ static_ip }}


esphome:
  name: ${device_id}
  platform: ESP8266
  board: esp8285

wifi:
  ssid: eggs_iot
  password: {{ wifi_password }}
  fast_connect: true

  manual_ip:
    static_ip: ${static_ip}
    gateway: 192.168.20.1
    subnet: 255.255.255.0

  # Enable fallback hotspot (captive portal) in case wifi connection fails
  ap:
    ssid: ${device_id} Fallback Hotspot
    password: {{ fallback_password }}

# Start a recovery AP if wifi fails to connect
# https://esphome.io/components/captive_portal.html
captive_portal:

# Enable OTA updates via port 8266
# https://esphome.io/components/ota.html
ota:

# Enable the webserver
# https://esphome.io/components/web_server.html
web_server:
  auth:
    username: mafro
    password: {{ fallback_password }}

prometheus:

# Use NTP for local clock
# https://esphome.io/components/time.html
time:
  - platform: sntp
    timezone: Australia/Melbourne

# Setup connection to MQTT broker
# https://esphome.io/components/mqtt.html
mqtt:
  broker: 192.168.1.198
  keepalive: 60s
  discovery: true

# ----------------------------------------

binary_sensor:
  - platform: gpio
    pin:
      number: GPIO0
      mode: INPUT_PULLUP
      inverted: true
    name: ${device_name} Power Button
    on_press:
      - switch.toggle: relay

  - platform: status
    name: ${device_name} Status

switch:
  - platform: gpio
    id: green_led
    pin:
      number: GPIO13
      inverted: true
    restore_mode: ALWAYS_OFF

  - platform: gpio
    name: ${device_name}
    pin: GPIO14
    id: relay
    restore_mode: ALWAYS_OFF

sensor:
  - platform: hlw8012
    sel_pin:
      number: GPIO12
      inverted: true
    cf_pin: GPIO04
    cf1_pin: GPIO05
    current:
      name: ${device_name} Current
      unit_of_measurement: A
    voltage:
      name: ${device_name} Voltage
      unit_of_measurement: V
    power:
      id: kogan_plug_wattage
      name: ${device_name} Power
      unit_of_measurement: W
    current_resistor: "0.00087"  # HIGHER VALUE GIVES LOWER WATTAGE
    voltage_divider: "2030"      # LOWER VALUE GIVES LOWER VOLTAGE
    change_mode_every: 8
    update_interval: 5s

  - platform: total_daily_energy
    name: ${device_name} Daily Energy
    power_id: kogan_plug_wattage
    filters:
      - multiply: 0.001
    unit_of_measurement: kWh
